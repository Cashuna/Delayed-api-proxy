red"; 54  username.focus(); 55  return false; 56  } 57
58  // VALIDATE EMAIL 59  if(email.value == ""){ 60  email_error.textContent = "Email is required"; 61  email.style.border = "1px solid red"; 62  email.focus(); 63  return false; 64  } 65  66  // VALIDATE PASSWORD 67  if (password.value != password_confirmation.value) { 68  password_error.textContent = "The two passwords do not match";69  password.style.border = "1px solid red"; 70  password_confirmation.style.border = "1px solid red"; 71  password.focus(); 72  return false; 73  } 74  75  // PASSWORD REQUIRED 76  if (password.value == "" || password_confirmation.value == "") { 77  password_error.textContent = "Password required"; 78  password.style.border = "1px solid red"; 79  password_confirmation.style.border = "1px solid red"; 80  password.focus(); 81  return false; 82  } 83  } 84  85  // ADD EVENT LISTENERS 86  function nameVerify(){ 87  if (username.value != "") { 88  name_error.innerHTML = ""; 89  username.style.border = "1px solid #110E0F"; 90  return true; 91  } 92  } 93  94  function emailVerify(){ 95  if (email.value != "") { 96  email_error.innerHTML = ""; 97  email.style.border = "1px solid #110E0F"; 98  return true; 99  } 100  } 101  102  103 </script>
